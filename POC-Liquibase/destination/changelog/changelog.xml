<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    
    <changeSet id="1" author="NapasKi">
        <addColumn tableName="employees">
            <column name="emp_id" type="int">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="NapasKi">
        <insert tableName="employees">
            <column name="emp_id" valueNumeric="id"/>
            <column name="name" value="name"/>
            <column name="job_title" value="position"/>
            <column name="monthly_salary" valueNumeric="salary"/>
        </insert>
    </changeSet>

    <!-- เติมค่า UUID ให้กับทุก row ใน new_uuid -->
    <changeSet id="3" author="NapasKi">
        <sql>
            UPDATE employees
            SET id = gen_random_uuid();
        </sql>
    </changeSet>

    <!-- ตั้งค่า new_uuid เป็น primary key -->
    <changeSet id="4" author="NapasKi">
        <addPrimaryKey columnNames="id" tableName="employees"/>
    </changeSet>

</databaseChangeLog>
